					.check
						.check-box
					.server
						p 伺服器
					.job
						p 職業
					.name
						p 角色名稱
				.row
					.check
						.check-box
					.server
						p 伺服器
					.job
						p 職業
					.name
						p 角色名稱
			.btn.btn-char-submit
				.btn-container
					p 確認
			.placeholder
		section#page4.page
			.placeholder
			.name-container
				p 請輸入您的角色暱稱
				.name-input

			.btn.btn-name-submit
				.btn-container
					p 確認
			.placeholder
		section#page5.page
			.subtitle
				p 請選擇喜愛的職業並進入測驗
			.choose-container
				.img-container
					.job.king
						.card-container
							img(src="assets/images/analysis/card_king.png", alt="")
					.job.knight
						.card-container
							img(src="assets/images/analysis/card_knight.png", alt="")
					.job.elf.selected
						.card-container
							img(src="assets/images/analysis/card_elf.png", alt="")
					.job.wizard
						.card-container
							img(src="assets/images/analysis/card_wizard.png", alt="")
				.clicker-container
					.job-clicker(data-job="king")
					.job-clicker(data-job="knight")
					.job-clicker(data-job="elf")
					.job-clicker(data-job="wizard")
			.btn.btn-job-submit
				.btn-container
					p 進入測驗
			
			.placeholder


block script
	script(src="https://code.jquery.com/jquery-3.2.1.js" integrity="sha256-DZAnKJ/6XZ9si04Hgrsxu/8s717jcIzLy3oi35EouyE=" crossorigin="anonymous")
	script(src="assets/scripts/analysis.js")