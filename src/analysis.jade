extends _layout.jade

block variables
	- var title = "- 戰力評比";

block head
	link(rel="stylesheet", href="assets/styles/analysis.css")

block content
	main
		.debug
			button(data-to="page1") page1
			button(data-to="page2") page2
			button(data-to="page3") page3
			button(data-to="page4") page4
			button(data-to="page5") page5
			//- button(data-to="page6") page6
		section#title
			img(src="assets/images/analysis/title.png", alt="")
		section#page1.page.show
			.subtitle
				p 想了解你有多少戰力，並且超越多少人嗎？
			.tel-container
				p 輸入手機號碼
				.tel-input
			.btn.btn-tel-submit
				.btn-container
					p 立即登入
			.placeholder
		section#page2.page
			.subtitle
				p 請選擇資深玩家或天堂新血
			.choose-container
				.choose-frame.old(data-stat="old")
					.frame-container
						p 資深玩家
						p 擁有天堂月/免服帳號，登入看角色戰力
				.choose-frame.new(data-stat="new")
					.frame-container
						p 天堂新血
						p 接受測驗了解自身潛力
			.placeholder
			.placeholder
		section#page3.page
			.placeholder
			.char-table
				.row
					.check
						.check-box.checked
					.server
						p 伺服器
					.job
						p 職業
					.name
						p 角色名稱
				.row
					.check
						.check-box
					.server
						p 伺服器
					.job
						p 職業
					.name
						p 角色名稱
				.row
					.check
						.check-box
					.server
						p 伺服器
					.job
						p 職業
					.name
						p 角色名稱
