extends _layout.jade

block variables
	- var title = "- 戰力評比";

block head
	link(rel="stylesheet", href="assets/styles/analysis.css")

block content
	main
		.debug
			button.selected(data-to="page1") page1
			button(data-to="page2") page2
			button(data-to="page3") page3
			button(data-to="page4") page4
			button(data-to="page5") page5
			button(data-to="page6") page6
			button(data-to="page7") page7
		//- .canvas-test
		section#title
			img(src="assets/images/analysis/title.png", alt="")
		section#page1.page.show
			.subtitle
				p 想了解你有多少戰力，
				p 並且超越多少人嗎？
			.tel-container
				p 輸入手機號碼
				.tel-input
			.btn.btn-tel-submit
				.btn-container
					p 立即登入
			.placeholder
		section#page2.page
			.subtitle
				p 請選擇資深玩家
				p 或天堂新血
			.choose-container
				.choose-frame.old(data-stat="old")
					.frame-container
						p 資深玩家
						p 擁有天堂月/免服帳號，登入看角色戰力
				.choose-frame.new(data-stat="new")
					.frame-container
						p 天堂新血
						p 接受測驗了解自身潛力
			.placeholder
			.placeholder
		section#page3.page
			.placeholder
			.char-table
				.row
					.check
						.check-box.checked
					.server
						p 伺服器
					.job
						p 職業
					.name
						p 角色名稱
				.row
					.check
						.check-box
					.server
						p 伺服器
					.job
						p 職業
					.name
						p 角色名稱
				.row
					.check
						.check-box
					.server
						p 伺服器
					.job
						p 職業
					.name
						p 角色名稱
				.row
					.check
						.check-box
					.server
						p 伺服器
					.job
						p 職業
					.name
						p 角色名稱
				.row
					.check
						.check-box
					.server
						p 伺服器
					.job
						p 職業
					.name
						p 角色名稱
			.btn.btn-char-submit
				.btn-container
					p 確認
			.placeholder
		section#page4.page
			.placeholder
			.name-container
				p 請輸入您的角色暱稱
				.name-input

			.btn.btn-name-submit
				.btn-container
					p 確認
			.placeholder
		section#page5.page
			.subtitle
				p 請選擇喜愛的職業
				p 並進入測驗
			.choose-container
				.img-container
					.job.king.selected(data-job="king")
						.card-container
							img(src="assets/images/analysis/card_king.png", alt="")
					.job.knight(data-job="knight")
						.card-container
							img(src="assets/images/analysis/card_knight.png", alt="")
					.job.elf(data-job="elf")
						.card-container
							img(src="assets/images/analysis/card_elf.png", alt="")
					.job.wizard(data-job="wizard")
						.card-container
							img(src="assets/images/analysis/card_wizard.png", alt="")
				.clicker-container
					.job-clicker(data-job="king")
					.job-clicker(data-job="knight")
					.job-clicker(data-job="elf")
					.job-clicker(data-job="wizard")
			.mobile-job-switch-list
				.job-switch.king.selected
				.job-switch.knight
				.job-switch.elf
				.job-switch.wizard
			.btn.btn-job-submit
				.btn-container
					p 進入測驗
			.placeholder
		section#page6.page
			.placeholder
			.quiz-container
				.quiz-title
					p 一、你會注重強化哪一種能力值呢？
				.quiz-option-list
					.quiz-option.option1(data-value="")
						p A.力量
					.quiz-option.option2(data-value="")
						p B.敏捷
					.quiz-option.option3(data-value="")
						p C.智力
					.quiz-option.option4(data-value="")
						p D.體質
				.quiz-progress-bar
					.quiz-progress.done(data-qNum="1")
					.quiz-progress(data-qNum="2")
					.quiz-progress(data-qNum="3")
					.quiz-progress(data-qNum="4")
					.quiz-progress(data-qNum="5")
					.quiz-progress(data-qNum="6")
			.btn.btn-quiz-submit
				.btn-container
					p 下一題
			.placeholder
		section#page7.page
			.subtitle
				p 測驗結果
			.final-img
				//- img(src="assets/images/analysis/final.png", alt="")
			.btn-list
				.btn.btn-fb-share
					.btn-container
						img(src="assets/images/analysis/btn_icon_fb.png", alt="")
						p 分享到Facebook
				.btn.btn-line-share
					.btn-container
						img(src="assets/images/analysis/btn_icon_line.png", alt="")
						p 分享到Line 
			.placeholder




